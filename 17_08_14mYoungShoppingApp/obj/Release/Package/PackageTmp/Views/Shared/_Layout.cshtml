		<script>
			$("#navOpen").click(
				function open() {
					document.getElementById("boogieBar").style.display = "block";
					document.getElementById("boogieBar").style.position = "fixed";
					document.getElementById("boogieBar").style.width = "250px";
				}
			)
			$("#navClose").click(
				function open() {
					document.getElementById("boogieBar").style.display = "none";
				}
			)
			// Get the modal
			var modal = document.getElementById('myModal');

			// Get the anchor that opens the modal
			var btn = document.getElementById("myAnchor");

			// Get the <span> element that closes the modal
			var span = document.getElementsByClassName("close")[0];

			// When the user clicks the anchor, open the modal
			btn.onclick = function () {
				modal.style.display = "block";
			}

			// When the user clicks on <span> (x), close the modal
			span.onclick = function () {
				modal.style.display = "none";
			}

			// When the user clicks anywhere outside of the modal, close it
			window.onclick = function (event) {
				if (event.target == modal) {
					modal.style.display = "none";
				}
			}

		</script>
